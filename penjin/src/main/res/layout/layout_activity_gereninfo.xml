<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_gray"
    android:orientation="vertical">

    <com.penjin.android.view.TitleBarView
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="个人信息" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/avatarWrapper"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/common_pressed_selector"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="头像"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp">

            <!--<com.penjin.android.view.PenjinAvatar
                android:id="@+id/avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />-->
            <com.penjin.android.view.CircleImageView
                android:id="@+id/pjAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:src="@drawable/send_msg" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:drawingCacheQuality="low"
                android:src="@drawable/arrow_8_right" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/nickNameWrapper"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/common_pressed_selector"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="昵称"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/nickName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="猫客家"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:drawingCacheQuality="low"
                android:src="@drawable/arrow_8_right" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/realNameWrapper"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/common_pressed_selector"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="姓名"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/realName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="猫客家"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:drawingCacheQuality="low"
                android:src="@drawable/arrow_8_right" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/qrWrapper"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/common_pressed_selector"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="我的二维码"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp">

            <com.penjin.android.view.PenjinAvatar
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:drawingCacheQuality="low"
                android:src="@drawable/arrow_8_right" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/addressWrapper"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/common_pressed_selector"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="我的地址"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="猫客家"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:drawingCacheQuality="low"
                android:src="@drawable/arrow_8_right" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/sexWrapper"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/common_pressed_selector"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="性别"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="男"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:drawingCacheQuality="low"
                android:src="@drawable/arrow_8_right" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/diquWrapper"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/common_pressed_selector"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="地区"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/diqu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="猫客家"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:drawingCacheQuality="low"
                android:src="@drawable/arrow_8_right" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/qianmingWrapper"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/common_pressed_selector"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="签名"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/qianming"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="猫客家"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:drawingCacheQuality="low"
                android:src="@drawable/arrow_8_right" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/mimaWrapper"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/common_pressed_selector"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="修改密码"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:drawingCacheQuality="low"
                android:src="@drawable/arrow_8_right" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/updateWrapper"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/common_pressed_selector">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="更新信息"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:drawingCacheQuality="low"
                android:src="@drawable/arrow_8_right" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>