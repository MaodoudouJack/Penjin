<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mao="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:longClickable="true"
    android:orientation="vertical" >

    <com.penjin.android.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mao:centerText="通讯录"
        />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_background_gray" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/qiyetongxunlu"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/common_pressed_selector" >
					<!-- android:background="@color/white" -->
                    <RelativeLayout
                        android:id="@+id/icon_qiyetonxunlu"
                        android:layout_width="55dp"
                        android:layout_height="45dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp" >

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="20dp"
                            android:drawingCacheQuality="low"
                            android:src="@drawable/group" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@id/icon_qiyetonxunlu"
                        android:gravity="center_vertical"
                        android:text="企业通讯录"
                        android:textSize="16sp" >
                    </TextView>

                    <RelativeLayout
                        android:id="@+id/qiyetongxunlu_next_wrapper"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" >

                        <ImageView
                            android:id="@+id/qiyetongxunlu_more"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingRight="10dp"
                            android:drawingCacheQuality="low"
                            android:src="@drawable/arrow_8_right" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="55dp"
                            android:layout_marginRight="7dp"
                            android:layout_toLeftOf="@id/qiyetongxunlu_more"
                            android:gravity="center"
                            android:paddingBottom="2dp"
                            android:text="立即创建"
                            android:textColor="@color/gray_8f"
                            android:textSize="12sp" >
                        </TextView>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentTop="true"
                        android:background="@color/dark_gray" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/dark_gray" >
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/shoujitongxunlu"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/common_pressed_selector" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentTop="true"
                        android:background="@color/dark_gray" >
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/icon_shoujitongxunlu"
                        android:layout_width="55dp"
                        android:layout_height="45dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp" >

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="20dp"
                            android:drawingCacheQuality="low"
                            android:src="@drawable/tongxunlu_orange" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@id/icon_shoujitongxunlu"
                        android:gravity="center_vertical"
                        android:text="手机通讯录"
                        android:textSize="16sp" >
                    </TextView>

                    <RelativeLayout
                        android:id="@+id/shoujitongxunlu_next_wrapper"
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:layout_alignParentRight="true" >

                        <ImageView
                            android:id="@+id/shoujitongxun_more"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingRight="10dp"
                            android:drawingCacheQuality="low"
                            android:src="@drawable/arrow_8_right" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" >

                    <LinearLayout
                        android:layout_width="318dp"
                        android:layout_height="0.7dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/dark_gray" >
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/qiyehaoyou"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:clickable="true"
                    android:background="@drawable/common_pressed_selector" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/dark_gray" >
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/icon_qiyehaoyou"
                        android:layout_width="55dp"
                        android:layout_height="45dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp" >

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="20dp"
                            android:drawingCacheQuality="low"
                            android:src="@drawable/haoyou_green" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@id/icon_qiyehaoyou"
                        android:gravity="center_vertical"
                        android:text="企业好友"
                        android:textSize="16sp" >
                    </TextView>

                    <RelativeLayout
                        android:id="@+id/qiyehaoyou_neat_wrapper"
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:layout_alignParentRight="true" >

                        <ImageView
                            android:id="@+id/qiyehaoyou_more"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingRight="10dp"
                            android:drawingCacheQuality="low"
                            android:src="@drawable/arrow_8_right" />

                        <TextView
                            android:id="@+id/qiyehaoyou_num"
                            android:layout_width="32dp"
                            android:layout_height="28dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@id/qiyehaoyou_more"
                            android:background="@drawable/red_heart"
                            android:gravity="center"
                            android:paddingBottom="3dp"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="10sp" >
                        </TextView>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/qunzu"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/common_pressed_selector" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentTop="true"
                        android:background="@color/dark_gray" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/dark_gray" >
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/icon_qunzu"
                        android:layout_width="55dp"
                        android:layout_height="45dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp" >

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="20dp"
                            android:drawingCacheQuality="low"
                            android:src="@drawable/qunzu_perple" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@id/icon_qunzu"
                        android:gravity="center_vertical"
                        android:text="我的群组"
                        android:textSize="16sp" >
                    </TextView>

                    <RelativeLayout
                        android:id="@+id/qunzu_next_wrapper"
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:layout_alignParentRight="true" >

                        <ImageView
                            android:id="@+id/qunzu_more"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingRight="10dp"
                            android:drawingCacheQuality="low"
                            android:src="@drawable/arrow_8_right" />

                        <TextView
                            android:id="@+id/qunzu_num"
                            android:layout_width="32dp"
                            android:layout_height="28dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@id/qunzu_more"
                            android:background="@drawable/red_heart"
                            android:gravity="center"
                            android:paddingBottom="3dp"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="10sp" >
                        </TextView>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/guanzhu"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/common_pressed_selector" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentTop="true"
                        android:background="@color/dark_gray" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/dark_gray" >
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/icon_guanzhu"
                        android:layout_width="55dp"
                        android:layout_height="45dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp" >

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="20dp"
                            android:drawingCacheQuality="low"
                            android:src="@drawable/star" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@id/icon_guanzhu"
                        android:gravity="center_vertical"
                        android:text="特别关注"
                        android:textSize="16sp" >
                    </TextView>

                    <RelativeLayout
                        android:id="@+id/guanzhu_next_wrapper"
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:layout_alignParentRight="true" >

                        <ImageView
                            android:id="@+id/guanzhu_more"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingRight="10dp"
                            android:drawingCacheQuality="low"
                            android:src="@drawable/arrow_8_right" />

                        <TextView
                            android:id="@+id/guanzu_num"
                            android:layout_width="32dp"
                            android:layout_height="28dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@id/guanzhu_more"
                            android:background="@drawable/red_heart"
                            android:gravity="center"
                            android:paddingBottom="3dp"
                            android:text="99"
                            android:textColor="@color/white"
                            android:textSize="10sp" >
                        </TextView>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>