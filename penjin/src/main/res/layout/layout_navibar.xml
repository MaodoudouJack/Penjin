<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/shape_tabbg"
   	>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/image_fengexian" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/wrapper_xiaoxi"
                style="@style/navibar_line" >
                <ImageButton
                    android:id="@+id/img_xiaoxi"
                    android:layout_marginTop="-10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/navibar_item"
                    android:src="@drawable/liaotian_gaoliang" />
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="消息"
                    android:textSize="10sp"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wrapper_huodong"
                style="@style/navibar_line" >

                <ImageButton
                    android:id="@+id/img_huodong"
                    android:layout_marginTop="-10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/navibar_item"
                    android:src="@drawable/huodong" />
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="-4dp"
                    android:text="活动"
                    android:textSize="10sp"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wrapper_ding"
                style="@style/navibar_line" >

                <ImageButton
                    android:id="@+id/img_ding"
                    android:layout_marginTop="-10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/navibar_item"
                    android:src="@drawable/ic_launcher" />
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="叮叮"
                    android:textSize="10sp"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wrapper_gongzuo"
                style="@style/navibar_line" >

                <ImageButton
                    android:id="@+id/img_gongzuo"
                    android:layout_marginTop="-10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/navibar_item"
                    android:src="@drawable/ic_launcher" />
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="工作"
                    android:textSize="10sp"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wrapper_geren"
                style="@style/navibar_line" >

                <ImageButton
                    android:id="@+id/img_geren"
                    android:layout_marginTop="-10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/navibar_item"
                    android:src="@drawable/geren" />
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="个人"
                    android:textSize="10sp"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>