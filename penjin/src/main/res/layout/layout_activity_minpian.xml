<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/common_bg_gray"
    android:layout_height="match_parent">
    <com.penjin.android.view.TitleBarView
        android:id="@+id/titlebar"
        app:centerText="我的名片"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <RelativeLayout
        android:layout_margin="50dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/mingpian_top"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:background="@color/common_botton_bar_blue">
            <ImageView
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/tensor_40"/>
            <TextView
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="高纬度二维码名片"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mingpian_touxiang"
            android:layout_below="@id/mingpian_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/common_person_circle">

            <TextView
                android:id="@+id/userNameJianchen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="生菜"
                android:textColor="@color/common_bg"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/mingpian_name"
            android:layout_below="@id/mingpian_touxiang"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="毛生菜"
                android:textColor="#03A9F4"
                android:textSize="14sp" />
        </RelativeLayout>

        <ImageView
            android:layout_marginTop="8dp"
            android:layout_below="@id/mingpian_name"
            android:background="@color/white"
            android:id="@+id/qrImage"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@id/qrImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="在高纬度上扫一扫加我哦"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>